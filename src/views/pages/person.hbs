{{#if user}}
<div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
    <div class="card p-4 mb-5">
        <div class="card-header">
            <h3>Usuario: {{user}}</h3>
        </div>
        <div class="card-body w-100">
            <form name="/login" method="POST">
                <div class="form-outline form-white mb-4">
                    <input type="email" id="typeEmailX" class="form-control form-control-lg" disabled="disabled"
                        value="{{name}}" />
                    <label class="form-label" for="typeEmailX">Name</label>
                </div>
                <div class="form-outline form-white mb-4">
                    <input type="email" id="typeEmailX" class="form-control form-control-lg" disabled="disabled"
                        value="{{date}}" />
                    <label class="form-label" for="typeEmailX">Date</label>
                </div>
                <div class="form-outline form-white mb-4">
                    <input type="email" id="typeEmailX" class="form-control form-control-lg" disabled="disabled"
                        value="{{pass}}" />
                    <label class="form-label" for="typeEmailX">Password</label>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Exit" class="btn bg-secondary float-end text-white w-100"
                        name="login-btn" />
                </div>
            </form>
        </div>
    </div>
</div>
{{/if}}